    <!-- Create the Canvas to draw the grid -->
    <Canvas fx:id="canvas" height="358.0" layoutX="45.0" layoutY="60.0" width="379.0" />
    
    <!-- Create the Button to move to the next generation -->
    <Button layoutX="170.0" layoutY="14.0" onAction="#handleNextGeneration" text="Next Generation" />
</AnchorPane>
